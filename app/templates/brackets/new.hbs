<div class="container">

  {{#bs-form formLayout="horizontal" model=this onSubmit=(action "submit") as |form|}}
    <h1>Create new bracket</h1>

    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6">
        <div class="card">
          <h4 class="card-title card-header">Bracket basics</h4>
          <div class="card-block">
            {{form.element controlType="text" label="Name" placeholder="Bracket name" property="name" required=true }}

            {{#form.element label="Contenders" property="numContenders" as |el|}}
              {{!--{{#x-select value=el.value id=el.id action=(action (mut el.value)) class="form-control" as |xs|}}--}}
              {{#x-select value=el.value id=el.id action=(action 'numContendersChanged') class="form-control" as |xs|}}
                {{#each numContendersOptions as |numContendersOption|}}
                  {{#xs.option value=numContendersOption}}{{numContendersOption}}{{/xs.option}}
                {{/each}}
              {{/x-select}}
            {{/form.element}}

            {{#form.element label="Bracket type" property="type" as |el|}}
              {{#x-select value=el.value id=el.id action=(action (mut el.value)) class="form-control" as |xs|}}
                {{#each typeOptions as |typeOption|}}
                  {{#xs.option value=typeOption}}{{typeOption}}{{/xs.option}}
                {{/each}}
              {{/x-select}}
            {{/form.element}}

            {{#form.element label="Visibility" property="visibility" as |el|}}
              {{#x-select value=el.value id=el.id action=(action (mut el.value)) class="form-control" as |xs|}}
                {{#each visibilityOptions as |visibilityOption|}}
                  {{#xs.option value=visibilityOption}}{{visibilityOption}}{{/xs.option}}
                {{/each}}
              {{/x-select}}
            {{/form.element}}

            {{#form.element label="Seed column" property="seedProperty" as |el|}}
              {{#x-select value=el.value id=el.id action=(action (mut el.value)) class="form-control" as |xs|}}
                {{#each columns as |seedProp|}}
                  {{#xs.option value=seedProp}}{{seedProp}}{{/xs.option}}
                {{/each}}
              {{/x-select}}
            {{/form.element}}
            
            {{form.element controlType="checkbox" label="Seed ascending" property="seedAscending"}}

            {{form.element controlType="checkbox" label="Blind bracket" property="blind"}}
          </div>
        </div>
      </div>


      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6">
        <div class="card">
          <h4 class="card-title card-header">Edit contenders</h4>
          <div class="card-block">
            {{contender-editor
              contenders=contenders
              columns=columns 
              addColumn=(action "addColumn")
              deleteColumn=(action "deleteColumn")
              columnNameChanged=(action "columnNameChanged")
            }}
          </div>
        </div>
      </div>

    </div>

    {{bs-button defaultText="Create bracket" type="primary" buttonType="submit"}}
  {{/bs-form}}

</div>
